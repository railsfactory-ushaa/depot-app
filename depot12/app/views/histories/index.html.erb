<h1>Order History</h1>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Amount</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<% @histories.each do |item| %>
      <tr>

         <td><%= item.product.title %></td>
        <td><%= item.product.price %></td>
        <td><%= item.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>


